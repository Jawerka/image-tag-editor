".webp"="ImageTagEditor.Image"

[HKEY_CURRENT_USER\SOFTWARE\Classes\ImageTagEditor.Image]
@="Image Tag Editor Image File"
"FriendlyTypeName"="Image Tag Editor Image File"

[HKEY_CURRENT_USER\SOFTWARE\Classes\ImageTagEditor.Image\DefaultIcon]
